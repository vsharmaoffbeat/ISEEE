@using ISEE.Resources
<style>
    .easytree-draggable i.employee {
        background-image: url("/images/img/employee_16.png") !important;
        height: 16px;
        width: 16px;
        display: inline-block;
        top: 2px;
        position: relative;
    }

    .easytree-draggable i.customer {
        background-image: url("/images/img/customer_16.png") !important;
        height: 16px;
        width: 16px;
        display: inline-block;
        top: 2px;
        position: relative;
    }

    .employee {
        background-image: url("/images/img/employee_16.png") !important;
    }

    .customer {
        background-image: url("/images/img/customer_16.png") !important;
    }
</style>


<form role="form" method="post" action="#" autocomplete="on">
    <div class="row first_tree_rightbar">

        <div class="col-md-3 col-xs-12">
            <div class="form-group">
                <label for="usr">@ISEE.Resources.Resource.TypeFindTree</label>
                <select class="form-control isee_select_option" ng-model="choice">
                    <option value='' selected="selected">@ISEE.Resources.Resource.Employee</option>
                    <option value="2">@ISEE.Resources.Resource.Customer</option>
                </select>
            </div>
        </div>

        <div class="col-md-3 col-xs-12">
            <div class="form-group">
                <label for="usr">@ISEE.Resources.Resource.TypeDragDrop</label>
                <select class="form-control isee_select_option" ng-model="choiceType">
                    <option value='' selected="selected">@ISEE.Resources.Resource.Multi</option>
                    <option value="2">@ISEE.Resources.Resource.Single</option>
                </select>
            </div>
        </div>

        <div class="col-md-6 col-xs-12 tree_save_button">
            <button type="button" class="btn btn-default isee_select_button search_tree" ng-click="search()"><img src="../images/img/search5.png" /></button>
            <button type="button" class="btn btn-default isee_select_button edit_tree" ng-click="clear()"><img src="../images/img/edit5.png" /></button>
            <button type="button" class="btn btn-default isee_select_button save_tree" ng-click="saveTree()"><img src="../images/img/save.png" /></button>
        </div>

    </div>

    <div class="row second_tree_rightbar" ng-hide="choice==2">
        <div class="col-md-3 col-xs-12">
            <div class="form-group">
                <label for="usr">@ISEE.Resources.Resource.LastName</label>
                <input type="text" class="form-control isee_input_shadow" ng-model="EmployeeSearchData.LastName">
            </div>
        </div>

        <div class="col-md-3 col-xs-12">
            <div class="form-group">
                <div class="form-group">
                    <label for="usr">@ISEE.Resources.Resource.FirstName</label>
                    <input type="text" class="form-control isee_input_shadow" ng-model="EmployeeSearchData.FirstName">
                </div>
            </div>
        </div>

        <div class="col-md-3 col-xs-12">
            <div class="form-group">
                <label for="usr">@ISEE.Resources.Resource.Number</label>
                <input type="text" class="form-control isee_input_shadow" ng-model="EmployeeSearchData.phone">
            </div>
        </div>

    </div>

    <div class="row third_tree_rightbar" ng-show="choice==2">
        <div class="col-md-3 col-xs-12">
            <div class="form-group">
                <label for="usr">@ISEE.Resources.Resource.State</label>
                <input id="treeState" type="text" class="form-control isee_input" ng-model="CustomerSearchData.state">
            </div>

            <div class="form-group">
                <label for="usr">@ISEE.Resources.Resource.LastNameCus </label>
                <input type="text" class="form-control isee_input" ng-model="CustomerSearchData.contactName">
            </div>

        </div>

        <div class="col-md-3 col-xs-12">
            <div class="form-group">
                <label for="usr">@ISEE.Resources.Resource.City</label>
                <input id="treeCity" type="text" class="form-control isee_input" ng-model="CustomerSearchData.city">
            </div>

            <div class="form-group">
                <label for="usr">@ISEE.Resources.Resource.FirstNameCus</label>
                <input type="text" class="form-control isee_input" ng-model="CustomerSearchData.companyName">
            </div>
        </div>

        <div class="col-md-3 col-xs-12">
            <div class="form-group">
                <label for="usr">@ISEE.Resources.Resource.Street</label>
                <input id="treeStreet" type="text" class="form-control isee_input" ng-model="CustomerSearchData.street">
            </div>

            <div class="form-group">
                <label for="usr">@ISEE.Resources.Resource.Phone1</label>
                <input type="text" style="width: 20%;display: inline-block;" class="form-control fields isee_input" ng-model="CustomerSearchData.phoneArea" />
                <input type="text" style="width: 75%;margin-left: 1%; display: inline-block;" class="form-control fields isee_input" ng-model="CustomerSearchData.phone1" />

            </div>
        </div>

        <div class="col-md-3 col-xs-12">
            <div class="form-group">
                <label for="usr">@ISEE.Resources.Resource.BuildingNum</label>
                <input id="treeBuldingNumber" type="text" class="form-control isee_input" ng-model="CustomerSearchData.buldingNumber" />
            </div>

            <div class="form-group">
                <label for="usr">@ISEE.Resources.Resource.CustomerNum</label>
                <input type="text" class="form-control isee_input" ng-model="CustomerSearchData.customerNumber" />
            </div>
        </div>

    </div>

    <div class="row fourth_tree_rightbar">

        <div class="col-md-12 col-xs-12 search_result_header">
            <h5 class="tree_title">@ISEE.Resources.Resource.SearchResult</h5>
        </div>

        <div class="col-md-6 col-xs-12 tree_scroll_panel">

            <div class="col-lg-12 col-xs-12 tree_demo_company">

                <div class="col-md-3 col-xs-12 demo_row"><button type="button" class="btn btn-default isee_select_button btn_down" onclick="removeNodeX(false)">@ISEE.Resources.Resource.DeleteLeaf</button></div>

                <div class="col-md-3 col-xs-12 demo_row"><button type="button" class="btn btn-default isee_select_button btn_down" onclick="removeNodeX(true)">@ISEE.Resources.Resource.DeleteNode</button></div>

                <div class="col-md-3 col-xs-12 demo_row">
                    <div class="form-group">
                        <input type="text" class="form-control isee_input tree_panel_search" id="addNewNode">
                    </div>
                </div>

                <div class="col-md-3 col-xs-12 demo_row">

                    <button type="button" class="btn btn-default isee_select_button btn_down" onclick="addNode()">@ISEE.Resources.Resource.AddNode</button>
                </div>

                <div class="col-lg-12 col-sm-12 tree_second_company">

                    <div id="jstree_demo_div"></div>


                </div>
            </div>

        </div>

        <div class="col-md-6 col-xs-12">

            <div class="col-md-6 col-xs-12 tree_grid_panel">

                <div class="tree_tg-wrap">
                    <table class="tree_tg" id="employeeGrid">
                        <tr>
                            <th class="tree_tg-zqgi"></th>
                            <th class="tree_tg-z1n2">@ISEE.Resources.Resource.Name</th>
                            <th class="tree_tg-z1n2">@ISEE.Resources.Resource.Phone1</th>
                        </tr>

                        <tr ng-repeat="gridOption in gridOptions" ng-attr-class="{{gridOption.id == SelectedAdminTreeEmployee && 'easytree-draggable active' || 'easytree-draggable' }}" ng-hide="choice==2" data-oid='{{gridoption.id}}' data-id='{{gridOption.id}}' data-name='{{gridOption.LastName}} {{gridOption.FirstName}}' data-type="employee" ng-mousedown="setVariable(gridOption)">


                            <td class="tg-dx8v_category">
                                <i></i>
                                <span style="display:none;" id='{gridOption.id}'>{{gridOption.id}}</span>
                            </td>


                            <td class="tg-dx8v_category" style="text-align:left !important;">

                                {{gridOption.LastName}}&nbsp;{{gridOption.FirstName}}
                            </td>
                            <td class="tg-dx8v_category" style="text-align:left !important;">
                                {{gridOption.MainAreaPhone}}-{{gridOption.MainPhone}}
                            </td>


                        </tr>
                        <tr ng-repeat="gridCustOption in gridCustOptions" ng-show="choice==2" ng-attr-class="{{gridCustOption.id == SelectedAdminTreeCustomer && 'easytree-draggable active' || 'easytree-draggable' }}" data-type="customer" data-oid=' {{gridCustOption.id}}' data-id=' {{gridCustOption.id}}' data-name='{{gridCustOption.LastName}} {{gridCustOption.FirstName}}' ng-mousedown="setVariable(gridCustOption)">


                            <td class="tg-dx8v_category">
                                <i></i>
                                <span style="display:none;" id='gridCustOption.id'>{{gridCustOption.id}}</span>
                            </td>


                            <td class="tg-dx8v_category" style="text-align:left !important;">

                                {{gridCustOption.LastName}}&nbsp;{{gridCustOption.FirstName}}
                            </td>
                            <td class="tg-dx8v_category" style="text-align:left !important;">
                                {{gridCustOption.AreaPhone1}}-{{gridCustOption.Phone1}}
                            </td>


                        </tr>
                    </table>
                </div>





            </div>

        </div>

    </div>

</form>

<script type="text/javascript">
    var treeJsonData = JSON.parse('@Html.Raw(ViewBag.JsonData)');
    var treeEmployeeJsonData = JSON.parse('@Html.Raw(ViewBag.JsonData)');
    var treeCustomerJsonData = JSON.parse('@Html.Raw(ViewBag.JsonData)');
    var isCurrentNodeAdded = false;

    var newNodeID = -1000;
    var objTree = $('#jstree_demo_div').easytree(
        {
            data: treeJsonData,
            enableDnd: true,
            canDrop: canDrop,
            dropped: dropped,
            dropping: dropping
        });


    function addNode() {
        if ($('#addNewNode').val().trim().length > 0) {
            var sourceNode = {};
            sourceNode.text = $('#addNewNode').val();
            sourceNode.id = newNodeID;
            newNodeID = newNodeID - 1;
            sourceNode.iconUrl = "/images/img/Blank300.png";
            sourceNode.objecttype = "branchNode";
            var target = $('#jstree_demo_div .easytree-active');
            var targetId
            if (target.length > 0) {
                var objType = objTree.getNode(target.attr("id")).objecttype;

                if (objType == "companyNode" || objType == "branchNode") {
                    targetId = target.attr("id")

                    //Check Name Already Exist
                    var targetNode = objTree.getNode(targetId)
                    if (targetNode.children != undefined) {
                        var item = $.grep(targetNode.children, function (v) { return v.text.trim() === $('#addNewNode').val().trim(); })
                        if (item.length > 0) {
                            return false
                        }
                    }

                    sourceNode.textCss = "customnode";
                    objTree.addNode(sourceNode, targetId);
                    // objEmployeeTree.addNode(sourceNode, targetId);
                    //s  objCustomerTree.addNode(sourceNode, targetId);
                    $('#addNewNode').val('')


                }
            }

        }
        objTree.rebuildTree();

    }
    function removeNodeX(bIsNode) {
        var currentlySelected

        var target = $('#jstree_demo_div .easytree-active');
        if (target.length > 0) {
            currentlySelected = target.attr("id")
        }
        var node = objTree.getNode(currentlySelected);
        if (!node) { return; }

        if (node.objecttype == "companyNode")
            return

        if (bIsNode) {
            if (node.children != undefined && node.children.length > 0 && node.objecttype == "branchNode") {
                var appElement = document.querySelector('[ng-controller=SearchCtrl]');
                var $scope = angular.element(appElement).scope();
                $scope.$apply(function () {
                    $scope.ShowMessageBox('Drag and Drop alert', 'Branch can not deleted as it contains data')
                });
                return
            }

            if (node.objecttype == "branchNode") {
                objTree.removeNode(node.id);
                //objEmployeeTree.removeNode(node.id);
                // objCustomerTree.removeNode(node.id);
            }

        } else {

            if (node.objecttype == "employee" || node.objecttype == "customer") {
                objTree.removeNode(node.id);
            }
        }
        objTree.rebuildTree();
    }

    function canDrop(event, nodes, isSourceNode, source, isTargetNode, target) {
        if (!isTargetNode && target.id == 'divAcceptHref' && isSourceNode) {
            return source.href ? true : false;
        }
        if (isTargetNode) {
            if (($(source).data("type") == "employee" || $(source).data("type") == "customer") && $(source).data("type") == target.objecttype) {
                return false;
            }
            if (($(source).data("type") == "customer") && target.objecttype == "employee") {
                return false;
            }
            if (($(source).data("type") == "employee") && target.objecttype == "customer") {
                return false;
            }
            if (target.objecttype == undefined) {
                return false;
            }
            if (target.children != null && IsNodeExist(target.children, source)) {
                return false;
            }
            isCurrentNodeAdded = false;
            return true;
        }
    }
    function dropping(event, nodes, isSourceNode, source, isTargetNode, target, canDrop) {
        if (isSourceNode && !canDrop && target && (!isTargetNode && (target.id == 'divRejectAll' || target.id == 'divAcceptHref'))) {
            //  alertMessage("Dropping node rejected '" + source.text + "'");
        }
    }
    function dropped(event, nodes, isSourceNode, source, isTargetNode, target) {
        // internal to external drop
        if (isSourceNode && target && (!isTargetNode && (target.id == 'divAcceptAll' || target.id == 'divAcceptHref'))) {
            //  alertMessage("Dropped node accepted '" + source.text + "'");
        }
        if (isSourceNode && isTargetNode) { // internal to internal drop
            // alertMessage("Internal drop accepted, '" + source.text + "'  --> '" + target.text + "'");
        }
        if (isTargetNode && !isSourceNode) { // external to internal drop
            if (!isCurrentNodeAdded) {
                var node = {};
                node.text = $(source).data("name");
                node.id = newNodeID;
                newNodeID = newNodeID - 1;
                node.objectid = $(source).data("id");
                node.objecttype = $(source).data("type");
                if (node.objecttype == "employee") {
                    node.iconUrl = "/images/img/employee_16.png";
                } else {
                    node.iconUrl = "/images/img/customer_16.png";
                }

                objTree.addNode(node, target.id);
                //    objEmployeeTree.addNode(node, target.id);
                //    objCustomerTree.addNode(node, target.id);

                objTree.rebuildTree();
                isCurrentNodeAdded = true;
                var appElement = document.querySelector('[ng-controller=SearchCtrl]');
                var $scope = angular.element(appElement).scope();
                if ($scope.choiceType == '2') {
                    $('#employeeGrid tr[data-id="' + node.objectid + '"]').remove();
                }
            }
        }
    }
    function alertMessage(message) {
        if (!$('#cbAlerts').is(':checked')) {
            alert(message);
        }
    }
</script>